<% include partials/header %>

<div class="ui main text container">
    <div class="ui huge header">
      <h1>Share and Record Life</h1>  
    </div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% diaries.forEach(function(diary){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= diary.image %>">
                    </div>
                    <div class="content">
                        <a class="header" href="/diary/<%= diary._id %>">
                            <%= diary.title %>
                        </a>
                        <div class="meta">
                            <span><%= diary.date.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%- diary.content.substring(0, 18) %> ... </p>
                        </div>
                        <div class="extra">
                            <div class="ui icon buttons">
                                <a class="ui basic button" href="/diary/<%= diary._id %>">
                                    More
                                    <i class="chevron circle right icon"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>    
        </div>
    </div>
</div>

<% include partials/footer %>

