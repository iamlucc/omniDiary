<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
        New Diary    
    </div>
    <form class="ui form" action="/diary" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="diary[title]" placeholder="title">
        </div>
        
        <div class="field">
            <label>Image</label>
            <input type="text" name="diary[image]" placeholder="image url">
        </div>
        
        <div class="field">
            <label>What do you think...</label>
            <textarea name="diary[content]" placeholder="write here"></textarea>
            <!--<input type="text" name="diary[content]" placeholder="write here">-->
        </div>
        
        <button class="ui button big" >Submit</button>
        
    </form>
</div>

